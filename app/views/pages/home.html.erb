<div class="jumbotron text-center">
  <h1>Welcome to Micro Donate</h1>

  <h3>Helping anyway we can!</h3>
</div>
<div class="row text-center">
  <% if user_signed_in? %>
    <div class="col-md-6">
      <div class="well">
        <% if current_user.profile %>
          <h2>Your Profile</h2>
          <%= link_to 'Edit Your Profile', edit_user_profile_path(current_user.id), class: 'btn btn-default btn-lg btn-block' %>
          <%= link_to 'View Your Profile', user_path(current_user.id), class: 'btn btn-default btn-lg btn-block' %>
        <% else %>
          <%= link_to "Create Your Profile", new_user_profile_path(current_user) if current_user %>
        <% end %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="well">
        <h2>The Community</h2>
        <%= link_to 'Visit The Community', '#', class: 'btn btn-default btn-lg btn-block' %>
      </div>
    </div>
  <% else %>
    <div class="col-md-6">
      <div class="white-text">
        <h2>Need Help?</h2>
        <h4>Looking for a little help</h4>
        <%= link_to "Sign Up", new_user_registration_path(plan: @signup), class: 'btn btn-primary btn-lg btn-block' %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="white-text">
        <h2>Want to donate?</h2>
        <h4>If you're looking to give a little help</h4>
        <%= link_to "Donate", new_user_registration_path(plan: @donate), class: 'btn btn-success btn-lg btn-block' %>
      </div>
    </div>
  <% end %>
</div>
